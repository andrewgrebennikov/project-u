{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true
  },
  "include": ["config", "src"],
  "exclude": ["dist", "node_modules"]
}
